#!/bin/tcsh -f

set classpath = $1
set host = $2
set logDir = $3
set args = ($argv[4-$#argv])

set parent = `dirname $0`/..

set clientPolicy = "-Djava.security.policy=$parent/policy-files/client.policy"
set clientCodebase = "-Djava.rmi.server.codebase=file://$parent/"

# start the parser
java -server -cp $classpath -Xms400m -Xmx400m $clientPolicy $clientCodebase \
    danbikel.parser.Parser $args >& $logDir/$host.log
